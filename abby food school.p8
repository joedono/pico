-- utility

function table_contains(t,v)
 for k in all(t) do
  if (k==v) return true;
 end
 
 return false;
end

function get_selected_ingredient()
 local x=cur[1];
 local y=cur[2];
 local i=x+(y-1)*3;
 
 return ingredients[avail_ingred[i]];
end

function shuffle(t)
 for n=1,#t*2 do
  local a,b=flr(1+rnd(#t)),flr(1+rnd(#t));
  t[a],t[b]=t[b],t[a];
 end
 
 return t;
end
