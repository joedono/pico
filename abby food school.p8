-- player

function init_player()
 player_normal=1;
 player_happy=2;
 player_sad=3;
end

function draw_player()
 local cur_mood=player_normal;
 if (state==4) cur_mood=player_sad;
 if (state==5) cur_mood=player_happy;
 
 spr(cur_mood,60,36);
end
